@model List<Sistema.Entity.Pessoa>
@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="row">
    <div class="col-md-12" style="text-align: right">
        @Html.ActionLink("Adicionar", "Cadastrar", "Home", new { area = "" }, new { @class = "btn btn-default" })
        @Html.ActionLink("Selecionar Maior Valor", "SelecionarMaiorvalor", "Home", new { area = "" }, new { @class = "btn btn-default" })
    </div>
</div>
<hr />
<div class="row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Idade</th>
                <th>Dinheiro</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Idade</td>
                    <td>@item.Dinheiro</td>
                    <td>@Html.ActionLink("Editar", "Editar", "Home", new { id = item.Id }, null) |@Html.ActionLink("Deletar", "Deletar", "Home", new { id = item.Id }, null) </td>
                </tr>
            }
        </tbody>
    </table>
</div>